{
  "name": "Automaker Studio",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:22",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "forwardPorts": [3007, 3008],
  "portsAttributes": {
    "3007": {
      "label": "Automaker UI",
      "onAutoForward": "openBrowser"
    },
    "3008": {
      "label": "Automaker Server",
      "onAutoForward": "silent"
    }
  },
  "postCreateCommand": "npm install && npm install -g @anthropic-ai/claude-code && mkdir -p /workspaces/projects",
  "postStartCommand": "npm run dev:web",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  "mounts": ["source=automaker-projects,target=/workspaces/projects,type=volume"],
  "remoteEnv": {
    "PROJECTS_DIR": "/workspaces/projects"
  }
}
